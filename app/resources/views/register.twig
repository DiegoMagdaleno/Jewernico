{% extends 'layout.twig' %}

{% block content %}

	<dialog id="question-modal" class="modal">
		<div class="modal-box bg-white overflow-hidden shadow-xl sm:rounded-lg p-8 max-w-md mx-auto">
			<div class="mb-4 flex flex-col items-center justify-center">
				<h3 class="text-3xl font-bold pb-3">Pregunta de Seguridad</h3>
			</div>
			<form id="question-form" class="flex flex-col items-center">
				<div class="mb-4 w-full">
					<label for="question" class="block text-lg text-gray-500 mb-2">¿Cuál es tu pregunta de seguridad?</label>
					<select id="question" name="id-pregunta" class="select select-bordered w-full max-w-md">
                    {% for question in questions %}
                        <option value="{{ question.Id }}">{{ question.Pregunta }}</option>
                    {% endfor %}
                    </select>
				</div>
				<div class="mb-4 w-full">
					<label for="answer" class="block text-lg text-gray-500 mb-2">Respuesta:</label>
					<input type="text" id="answer" name="respuesta" class="input input-bordered w-full max-w-md" required>
				</div>
				<div class="mb-4 w-full">
					<input type="button" id="question-submit" class="btn btn-primary w-full" value="Enviar">
				</div>
			</form>
		</div>
	</dialog>

	<main role="main" class="flex items-center justify-center">
		<div class="container p-8 mt-16">
			<div class="bg-white overflow-hidden shadow-xl sm:rounded-lg p-8 max-w-4xl mx-auto">
				<div class="mb-6 flex flex-col items-center justify-center">
					<h3 class="text-3xl font-bold pb-3">Registrarse</h3>
					<p class="text-lg text-gray-500 pb-2">Crear tu cuenta en Jewernico</p>
				</div>
				<form action="" id="register-form" method="post">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div>
							<label for="nombre" class="block text-lg text-gray-500 mb-2">Nombre:</label>
							<input type="text" id="nombre" name="nombre" class="input input-bordered w-full max-w-md" required>
						</div>
						<div>
							<label for="apellidoPaterno" class="block text-lg text-gray-500 mb-2">Apellido Paterno:</label>
							<input type="text" id="apellidoPaterno" name="apellidoPaterno" class="input input-bordered w-full max-w-md" required>
						</div>
						<div>
							<label for="apellidoMaterno" class="block text-lg text-gray-500 mb-2">Apellido Materno:</label>
							<input type="text" id="apellidoMaterno" name="apellidoMaterno" class="input input-bordered w-full max-w-md" required>
						</div>
						<div>
							<label for="correo" class="block text-lg text-gray-500 mb-2">Correo:</label>
							<input type="email" id="correo" name="correoElectronico" class="input input-bordered w-full max-w-md" placeholder="tucorreo@gmail.com" required>
						</div>
						<div>
							<label for="contraseña" class="block text-lg text-gray-500 mb-2">Contraseña:</label>
							<input type="password" id="contraseña" name="password" class="input input-bordered w-full max-w-md" required>
						</div>
						<div>
							<label for="confirmar-contraseña" class="block text-lg text-gray-500 mb-2">Confirmar Contraseña:</label>
							<input type="password" id="confirmar-contraseña" name="confirmarContraseña" class="input input-bordered w-full max-w-md" required>
						</div>
					</div>
					<div class="mt-4">
						<img src="/captcha" alt="Captcha" class="mb-2">
						<label for="captcha" class="block text-lg text-gray-500 mb-2">Captcha:</label>
						<input type="text" id="captcha" name="captcha" class="input input-bordered w-full max-w-md" placeholder="Introduce el código" required>
					</div>
					<div class="mt-6">
						<input id="submit-button" type="button" class="btn btn-primary w-full" value="Registrarse">
					</div>
				</form>
				<div class="inline-flex items-center justify-center w-full">
					<hr class="w-64 h-px my-8 bg-gray-200 border-0">
					<span class="text-lg absolute px-3 font-medium -translate-x-1/2 bg-white left-1/2">O bien</span>
				</div>
				<div class="text-center">
					<a href="/login" class="text-lg text-gray-600">¿Ya tienes cuenta?
						<span class="text-200-blue">Inicia sesión</span>
					</a>
				</div>
			</div>
		</div>
	</main>
    <script src="/dist/register.js"></script>
{% endblock %}
