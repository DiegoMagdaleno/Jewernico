{% extends 'layout.twig' %}

{% block content %}
	<main role="main" class="flex items-center justify-center">
		<div class="container p-8 mt-16">
			<div class="bg-white overflow-hidden shadow-xl sm:rounded-lg p-8 max-w-4xl mx-auto">
				<div class="mb-6">
					<h3 class="text-4xl font-bold pb-3">Login</h3>
					<p class="text-lg text-gray-600">Ingresa a tu cuenta de Jewernico</p>
				</div>
				<form action="" id="loginForm" method="post">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div>
							<label for="correo" class="block text-lg text-gray-600 mb-2">Correo:</label>
							<input type="email" id="correo" name="correoElectronico" class="input input-bordered w-full max-w-md" placeholder="tucorreo@gmail.com" required>
						</div>
						<div>
							<label for="contraseña" class="block text-lg text-gray-600 mb-2">Contraseña:</label>
							<input type="password" id="contraseña" name="password" class="input input-bordered w-full max-w-md" required>
						</div>
					</div>
					<div class="mt-4">
						<label class="flex items-center">
							<input type="checkbox" class="checkbox">
							<span class="ml-2 text-lg text-gray-600">Recuérdame</span>
						</label>
					</div>
					<div class="mt-6">
						<img src="/captcha" alt="Captcha" class="mb-2">
						<label for="captcha" class="block text-lg text-gray-600 mb-2">Captcha:</label>
						<input type="text" id="captcha" name="captcha" class="input input-bordered w-full max-w-md" placeholder="Introduce el código" required>
					</div>
					<div class="mt-6">
						<input id="submitButton" type="button" class="btn btn-primary w-full" value="Ingresar">
					</div>
				</form>
                <div class="inline-flex items-center justify-center w-full">
                    <hr class="w-64 h-px my-8 bg-gray-200 border-0">
                    <span class="text-lg absolute px-3 font-medium -translate-x-1/2 bg-white left-1/2">O bien </span> 
                </div>
                <div class="text-center">
                    <a href="/register" class="text-lg text-gray-600">¿No tienes cuenta? <span class="text-200-blue">Regístrate</span></a>
                </div>
			</div>
		</div>
	</main>
{% endblock %}
