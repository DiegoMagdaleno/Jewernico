{% extends "layout.twig" %}

{% block content %}
	{% include "partials/navbar.twig" %}
	<dialog id="cart_no_logged_modal" class="modal">
		<div class="modal-box text-center">
			<i class="fa-solid fa-cart-shopping fa-8x mb-4"></i>
			<p class="text-lg font-semibold">Para poder añadir al carrito es necesario tener una cuenta</p>
			<div class="modal-action flex justify-center">
				<form method="dialog" class="w-1/2 mr-2">
					<button class="btn btn-neutral w-full">Seguir navegando</button>
				</form>
				<button class="btn btn-primary w-1/2 ml-2" onclick='window.location.href="/login"'>Iniciar sesión</button>
			</div>
		</div>
		<form method="dialog" class="modal-backdrop">
			<button>close</button>
		</form>
	</dialog>
	<main role="main" class="mb-8">
		<div class="container mx-auto px-4">
			<h1 class="text-6xl font-bold text-center my-8">Productos</h1>
			<p class="text-xl text-center mb-4">Las mejores joyas tematicas estan en Jewernico.</p>
			<div class="flex justify-between items-center mb-4">
				<div class="flex space-x-4 items-center">
					<p class="font-bold">Filtros</p>
					<select class="select select-bordered w-32" id="categorias">
						<option disabled="disabled" selected="selected">Categoria</option>
					</select>
					<select class="select select-bordered w-32">
						<option disabled="disabled" selected="selected">Price</option>
						<option>Low to high</option>
						<option>High to low</option>
					</select>
					<select class="select select-bordered w-32">
						<option disabled="disabled" selected="selected">Sort by</option>
						<option>Popularity</option>
						<option>Newest</option>
						<option>Rating</option>
					</select>
				</div>
			</div>
			<div class="grid grid-cols-4 gap-x-4 gap-y-8" id="productos">
				{% for producto in productos %}
					{% include "partials/product.twig" with {producto:producto} %}
				{% endfor %}
			</div>
		</div>
	</main>
	{% include "partials/footer.twig" %}
{% endblock %}
