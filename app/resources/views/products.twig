{% extends "layout.twig" %}

{% block content %}
	{% include "partials/navbar.twig" %}
	<dialog id="cart_no_logged_modal" class="modal">
		<div class="modal-box text-center">
			<i class="fa-solid fa-cart-shopping fa-8x mb-4"></i>
			<p class="text-lg font-semibold">Para poder añadir al carrito es necesario tener una cuenta</p>
			<div class="modal-action flex justify-center">
				<form method="dialog" class="w-1/2 mr-2">
					<button class="btn btn-neutral w-full">Seguir navegando</button>
				</form>
				<button class="btn btn-primary w-1/2 ml-2" onclick='window.location.href="/login"'>Iniciar sesión</button>
			</div>
		</div>
		<form method="dialog" class="modal-backdrop">
			<button>close</button>
		</form>
	</dialog>
	<main role="main" class="mb-8">
		<div class="container mx-auto px-4">
			<h1 class="text-6xl font-bold text-center my-8">Productos</h1>
			<p class="text-xl text-center mb-4">Las mejores joyas temáticas están en Jewernico.</p>
			<div class="flex justify-between items-center mb-4">
				<div class="flex space-x-4 items-center justify-start w-full">
					<p class="font-bold">Filtros</p>
					<select class="select select-bordered w-32 ml-2" id="categories">
						<option value="all" selected="selected">Todos</option>
						{% for categoria in categorias %}
							<option value="{{categoria.Nombre}}">{{categoria.Nombre}}</option>
						{% endfor %}
					</select>
				</div>
				<div class="flex items-center ml-auto">
					<input type="number" id="min-price" name="min_price" placeholder="Precio mínimo" class="arrow-hide input input-bordered w-32">
					<span class="mx-2">
						--
					</span>
					<input type="number" id="max-price" name="max_price" placeholder="Precio máximo" class="arrow-hide input input-bordered w-32">
					<button class="btn btn-primary ml-2" id="search-price">Buscar</button>
				</div>
			</div>
			<div class="grid grid-cols-4 gap-x-4 gap-y-8" id="productos">
				{% for producto in productos %}
					{% include "partials/product.twig" with {producto:producto} %}
				{% endfor %}
			</div>
		</div>
	</main>
	<script src="/dist/products.js"></script>
	{% include "partials/footer.twig" %}
{% endblock %}
