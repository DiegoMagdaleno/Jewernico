{% extends "layout.twig" %}

{% block content %}
    {% include 'partials/navbar.twig' %}
    <main role="main">
        <!-- CODIGO DEL PRODUCTO AQUI -->
        <!-- PARA ACCEDER A INFORMACION DEL PRODUCTO QUE SE ESTA VIENDO, SE PUEDE USAR LA VARIABLE "producto" -->

    <section class="mt-20 p-10 grid grid-cols-2 gap-4">
        <!-- Mitad izquierda -->
        <div class="col-span-1">
            <!-- Imagen grande -->
            <div class="card bordered m-5">
                <figure>
                    <img class="w-full h-[100px]" src="{{ producto.Imagenes }}" alt="Producto"/>
                </figure>
                <div class="card-body">
                    <h2 class="card-title">{{ producto.Nombre }}</h2> 
                    <p>{{ producto.Descripcion }}</p>
                </div>
            </div>

            <!-- Imágenes pequeñas -->
            <div class="flex flex-col mt-7">
                <div class="card bordered m-7 h-[100px]">
                    <figure>
                        <img class="w-full h-full" src="{{ producto.Imagenes }}" alt="Producto"/>
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title">{{ producto.Nombre }}</h2> 
                        <p>{{ producto.Descripcion }}</p>
                    </div>
                </div>

                <div class="card bordered m-7 h-[100px]">
                    <figure>
                        <img class="w-full h-full" src="{{ producto.Imagenes }}" alt="Producto"/>
                    </figure>
                    <div class="badge badge-secondary absolute">Nuevo</div>
                    <div class="card-body">
                        <h2 class="card-title">{{ producto.Nombre }}</h2> 
                        <p>{{ producto.Descripcion }}</p>
                    </div>
                </div>
            </div>
        </div>
    
        <!-- Mitad derecha -->
        <div class="col-span-1 bg-gray-200 p-6">
            <h1 class="text-5xl font-bold mb-4">{{ producto.Nombre }}</h1>
    
            <div class="text-xl mb-4">
                <span class="font-semibold">{{ producto.Precio }} MXN</span>
                <span class="text-gray-500 line-through ml-2">{{ producto.Descuento }} MXN</span>
                <span class="ml-2 text-green-500">En oferta</span>
            </div>
    
            <div class="mb-4">
                <label for="cantidad" class="text-xl">Cantidad:</label>
                <input type="number" id="cantidad" name="cantidad" min="1" max="{{ producto.Stock }}" value="1" class="text-xl">
                <span class="text-gray-500 text-xl">Disponible: {{ producto.Stock }}</span>
            </div>
    
            <div class="mt-4 flex justify-center">
                <button class="btn btn-primary">Añadir al carrito</button>
                <button class="btn btn-success">Comprar</button>
            </div>
    
            <div class="mt-4">
                <p class="text-gray-700 text-center text-xl">{{ producto.Descripcion }}</p>
            </div>
    
            <!-- Botones Shipping y Return policy -->
            <div class="mt-4 flex justify-center">
                <button class="btn btn-secondary">Shipping</button>
                <button class="btn btn-secondary">Return policy</button>
            </div>
        </div>
    </section>

    </main>
{% endblock %}
