{% extends 'layout.twig' %}

{% block content %}

    {% include 'partials/navbar.twig' %}

	<main role="main" class="flex items-center justify-center">
		<div class="container p-8 mt-16 mb-16">
			<div class="bg-white overflow-hidden shadow-xl sm:rounded-lg p-8 max-w-4xl mx-auto">
				<div class="text-center mb-8">
					<h3 class="text-5xl font-bold pb-3">¡Contacta a Jewernico!</h3>
					<p class="text-lg text-gray-500 pb-4">¿Tienes alguna duda o pregunta? Ingresa tus datos y estaremos encantados de contactarte!</p>
				</div>
				<form method="post" action="" id="contact-form">
					<div class="mb-4 flex">
						<div class="w-1/2 pr-2 pb-3">
							<label for="nombre" class="block text-lg text-gray-500">Nombre</label>
							<input type="text" id="name" name="nombre" class="input input-bordered w-full max-w-sm" placeholder="Nombre" required>
						</div>
						<div class="w-1/2 pl-2">
							<label for="email" class="block text-lg text-gray-500">Email</label>
							<input type="email" id="email" name="correoElectronico" class="input input-bordered w-full max-w-md" placeholder="Email" required>
						</div>
					</div>
					<div class="mb-4 pb-3">
						<label for="telefono" class="block text-lg text-gray-500">Teléfono</label>
						<input type="text" id="telefono" name="telefono" class="input input-bordered w-full max-w-4xl" placeholder="Teléfono" required>
					</div>
					<div class="mb-4 pb-8">
						<label for="comentario" class="block text-lg text-gray-500">Comentario</label>
						<textarea id="comentario" name="comentario" class="textarea textarea-bordered w-full max-w-4xl" placeholder="Tu comentario..."></textarea>
					</div>
					<div class="mb-8 text-center">
						<button type="submit" class="btn btn-primary w-full text-white py-2 px-5" id="submit">Enviar</button>
					</div>
				</form>
			</div>
		</div>
	</main>
    <script src="/dist/contact.js"></script>
    {% include 'partials/footer.twig' %}
{% endblock %}
