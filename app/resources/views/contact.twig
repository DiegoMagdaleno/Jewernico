{% extends 'layout.twig' %}

{% block content %}

    {% include 'partials/navbar.twig' %}

	<main role="main" class="flex items-center justify-center">
		<div class="container p-4 sm:p-8 md:p-12 lg:p-16 xl:p-20 mt-8 sm:mt-16 mb-8 sm:mb-16">
			<div class="bg-white overflow-hidden shadow-xl sm:rounded-lg p-4 sm:p-8 md:p-12 lg:p-16 xl:p-20 max-w-4xl mx-auto">
				<div class="text-center mb-4 sm:mb-8">
					<h3 class="text-4xl sm:text-5xl font-bold pb-2 sm:pb-3">¡Contacta a Jewernico!</h3>
					<p class="text-base sm:text-lg text-gray-500 pb-3 sm:pb-4">¿Tienes alguna duda o pregunta? Ingresa tus datos y estaremos encantados de contactarte!</p>
				</div>
				<form method="post" action="" id="contact-form">
					<div class="mb-2 sm:flex">
						<div class="sm:w-1/2 pr-2 pb-2">
							<label for="nombre" class="block text-base sm:text-lg text-gray-500">Nombre</label>
							<input type="text" id="name" name="nombre" class="input input-bordered w-full sm:max-w-sm" placeholder="Nombre" required>
						</div>
						<div class="sm:w-1/2 pl-2 pb-2">
							<label for="email" class="block text-base sm:text-lg text-gray-500">Email</label>
							<input type="email" id="email" name="correoElectronico" class="input input-bordered w-full sm:max-w-md" placeholder="Email" required>
						</div>
					</div>
					<div class="mb-2 pb-2">
						<label for="telefono" class="block text-base sm:text-lg text-gray-500">Teléfono</label>
						<input type="text" id="telefono" name="telefono" class="input input-bordered w-full sm:max-w-4xl" placeholder="Teléfono" required>
					</div>
					<div class="mb-2 pb-4">
						<label for="comentario" class="block text-base sm:text-lg text-gray-500">Comentario</label>
						<textarea id="comentario" name="comentario" class="textarea textarea-bordered w-full sm:max-w-4xl" placeholder="Tu comentario..."></textarea>
					</div>
					<div class="mb-4 text-center">
						<button type="submit" class="btn btn-primary w-full sm:w-auto text-white py-2 px-5" id="submit">Enviar</button>
					</div>
				</form>
			</div>
		</div>
	</main>
    <script src="/dist/contact.js"></script>
    {% include 'partials/footer.twig' %}
{% endblock %}
